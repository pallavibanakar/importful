<div class="row g-4">
  <% @merchants.each do |merchant| %>
    <div class="col-lg-4 col-md-6">
      <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header bg-primary text-white text-center fw-bold fs-5">
          <%= merchant_name(merchant.slug) %>
        </div>

        <div class="card-body text-center">
          <p class="text-muted">
            Start importing your affiliates seamlessly with our easy-to-use platform.
          </p>
          <%= link_to "Start Import", new_merchant_import_path(merchant.slug), class: "btn btn-primary px-4 py-2 shadow-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
